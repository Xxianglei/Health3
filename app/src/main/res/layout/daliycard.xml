<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"

        android:layout_margin="2dp">

        <LinearLayout
            android:background="@mipmap/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/xinlv1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:clickable="false"
                    android:padding="0dp"
                    android:text="心率"
                    android:textStyle="normal"
                    android:textColor="#292929"
                    android:textSize="18sp" />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="start"
                    android:text="85"
                    android:id="@+id/xinlv"
                    android:textStyle="bold"
                    android:textColor="#292929"
                    android:textSize="25sp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="false"
                    android:gravity="start"
                    android:text="bpm"
                    android:textColor="#292929"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/down1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:scaleType="fitEnd"
                    android:src="@mipmap/down" />

            </LinearLayout>

            <com.example.heath.view.ExpandView.ExpandView
                android:id="@+id/expandView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:clickable="true"
                android:visibility="invisible" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="2dp">

        <LinearLayout
            android:background="@mipmap/knowledge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/tizhong1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:clickable="false"
                    android:padding="0dp"
                    android:text="体重"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="start"
                    android:layout_marginLeft="5dp"
                    android:text="65"
                    android:id="@+id/tizhong"
                    android:textStyle="bold"
                    android:textColor="#292929"
                    android:textSize="25sp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="false"
                    android:gravity="start"
                    android:text="kg"
                    android:textColor="#292929"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/down2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:scaleType="fitEnd"
                    android:src="@mipmap/down" />

            </LinearLayout>

            <com.example.heath.view.ExpandView.ExpandView
                android:id="@+id/expandView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:clickable="true"
                android:visibility="invisible" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="2dp">

        <LinearLayout
            android:background="@mipmap/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/xuezhi1" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:clickable="false"
                    android:padding="0dp"
                    android:text="血氧"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="start"
                    android:text="70"
                    android:id="@+id/xueyang"
                    android:textStyle="bold"
                    android:textColor="#292929"
                    android:textSize="25sp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="false"
                    android:gravity="start"
                    android:text="%"
                    android:textColor="#292929"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/down3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:scaleType="fitEnd"
                    android:src="@mipmap/down" />
            </LinearLayout>

            <com.example.heath.view.ExpandView.ExpandView
                android:id="@+id/expandView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#00ffffff"
                android:clickable="true"
                android:visibility="invisible" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="2dp">

        <LinearLayout
            android:background="@mipmap/task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/xuetang1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:clickable="false"
                    android:padding="0dp"
                    android:text="体温"
                    android:textColor="#292929"
                    android:textSize="18sp" />



                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="37"
                    android:id="@+id/tiwen"
                    android:textStyle="bold"
                    android:textColor="#292929"
                    android:textSize="25sp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="false"
                    android:gravity="start"
                    android:text="℃"
                    android:textColor="#292929"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/down4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:scaleType="fitEnd"
                    android:src="@mipmap/down" />
            </LinearLayout>

            <com.example.heath.view.ExpandView.ExpandView
                android:id="@+id/expandView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#00ffffff"
                android:clickable="true"
                android:visibility="invisible" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp">

        <LinearLayout
            android:background="@mipmap/knowledge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/xueya1" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:clickable="false"
                    android:padding="0dp"

                    android:text="血压"
                    android:textColor="#292929"
                    android:textSize="18sp" />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="80/120"
                    android:id="@+id/xueya"
                    android:textStyle="bold"
                    android:textColor="#292929"
                    android:textSize="25sp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:clickable="false"
                    android:gravity="start"
                    android:text="mmHg"
                    android:textColor="#292929"
                    android:textSize="14sp" />



                <ImageView
                    android:id="@+id/down5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:scaleType="fitEnd"
                    android:src="@mipmap/down" />
            </LinearLayout>

            <com.example.heath.view.ExpandView.ExpandView
                android:id="@+id/expandView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:clickable="true"
                android:visibility="invisible" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>