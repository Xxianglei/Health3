<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.cjj.MaterialRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:overlay="false"
        app:wave_color="#4b4949"
        app:wave_height_type="normal"
        app:wave_show="true">


        <com.example.heath.view.circlerefresh.MtScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <com.example.heath.ScrollNumber.MultiScrollNumber
                            android:id="@+id/heart"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/heart_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/heart"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_toEndOf="@+id/heart"
                            android:layout_toRightOf="@+id/heart"
                            android:adjustViewBounds="true"
                            android:src="@drawable/xin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/heart"
                            android:layout_toRightOf="@+id/heart"
                            android:text="BPM"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <com.example.heath.Praogress.TickCircleProgress
                            android:id="@+id/one"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            custom:bgColor="@color/color_bg"
                            custom:currProgress="250"
                            custom:foreEndColor="#fb6238"
                            custom:foreStartColor="#3360b9"
                            custom:maxProgress="360"
                            custom:progressInitialPosition="90"
                            custom:progressWidth="15dp"
                            custom:tickColor="@color/color_bg"
                            custom:tickMarkHeight="6dp"
                            custom:tickWidth="1dp"
                            custom:useAnimation="true" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_below="@id/relativeLayout"
                        android:layout_marginBottom="20dp">

                        <com.example.heath.Praogress.TickCircleProgress
                            android:id="@+id/two"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            custom:bgColor="@color/color_bg"
                            custom:currProgress="250"
                            custom:foreEndColor="#04f4fc"
                            custom:foreStartColor="#0349bf"
                            custom:maxProgress="360"
                            custom:progressInitialPosition="90"
                            custom:progressWidth="12dp"
                            custom:tickColor="@color/color_bg"
                            custom:tickMarkHeight="3dp"
                            custom:tickWidth="1dp"
                            custom:useAnimation="true" />

                        <com.example.heath.ScrollNumber.MultiScrollNumber
                            android:id="@+id/heart_pre"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="50dp"
                            android:textColor="#000000"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:text="血压"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/three"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/relativeLayout"
                        android:layout_marginBottom="20dp">

                        <com.example.heath.Praogress.TickCircleProgress
                            android:id="@+id/three1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            custom:bgColor="@color/color_bg"
                            custom:currProgress="250"
                            custom:foreEndColor="#04f4fc"
                            custom:foreStartColor="#0349bf"
                            custom:maxProgress="360"
                            custom:progressInitialPosition="90"
                            custom:progressWidth="12dp"
                            custom:tickColor="@color/color_bg"
                            custom:tickMarkHeight="3dp"
                            custom:tickWidth="1dp"
                            custom:useAnimation="true" />

                        <com.example.heath.ScrollNumber.MultiScrollNumber
                            android:id="@+id/heart_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="50dp"
                            android:textColor="#000000"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="40dp"
                            android:text="体温/℃"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/three"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:background="#75afa5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/relativeLayout2"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="驾驶情况"
                            android:textColor="#2d2d2d"
                            android:textSize="20sp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <android.support.v7.widget.CardView
                                android:id="@+id/cardView1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="20dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:adjustViewBounds="true"
                                        android:src="@mipmap/yezi" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="2dp"
                                            android:layout_marginTop="5dp"
                                            android:text="车内空气"
                                            android:textColor="#503434"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:id="@+id/cheneikq"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="2dp"
                                            android:layout_marginTop="5dp"
                                            android:text="清新"
                                            android:textColor="#207f20"
                                            android:textSize="20sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/cardView2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="20dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:adjustViewBounds="true"
                                        android:src="@mipmap/lian" />

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="2dp"
                                            android:layout_marginTop="5dp"
                                            android:text="您的状态"
                                            android:textColor="#503434"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:id="@+id/zhuangtai"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="2dp"
                                            android:layout_marginTop="5dp"
                                            android:text="极佳"
                                            android:textColor="#207f20"
                                            android:textSize="20sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:background="#75afa5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="体检数据"
                            android:textColor="#2d2d2d"
                            android:textSize="20sp" />

                        <include
                            android:id="@+id/daliycard"
                            layout="@layout/daliycard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/surface_bg"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="各种消息"
                        android:textColor="#333"
                        android:textSize="25sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </com.example.heath.view.circlerefresh.MtScrollView>
    </com.cjj.MaterialRefreshLayout>
</RelativeLayout>

